<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号："
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/dimen_16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/mTxt_orderNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="009875662789"
                    android:textColor="@color/black_333333"
                    android:textSize="@dimen/dimen_16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下单时间："
                    android:textColor="#888888"
                    android:textSize="@dimen/dimen_12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/mTxt_orderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-9-11 12:22:30"
                    android:textColor="#888888"
                    android:textSize="@dimen/dimen_12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/mTxt_orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@color/basicColor"
            android:textSize="@dimen/dimen_15sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRv_orderImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/mTxt_orderSum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:text="x 1"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lineColor"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/dimen_15sp" />

        <TextView
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:id="@+id/mTxt_orderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="￥ 99"
            android:textColor="#f4b43a"
            android:textSize="18sp" />

        <TextView
            android:layout_marginRight="@dimen/dimen_10dp"
            android:id="@+id/mTxt_orderAgain"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/ll1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_lunkuo_line3"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:text="再来一单"
            android:textColor="#666666"
            android:textSize="@dimen/dimen_15sp" />

        <TextView
            android:id="@+id/mTxt_orderDiscuss"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/ll1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_lunkuo_paint"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:text="评价/查看评价"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_15sp" />
    </LinearLayout>

</LinearLayout>