<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--用户留言-->
    <LinearLayout
        android:id="@+id/mLL_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTxt_meKeFuTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_lunkuo_paint7"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="11dp"
                android:paddingRight="@dimen/dimen_11dp"
                android:paddingTop="8dp"
                android:text="12月12日 10：20"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTxt_myQuestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="58dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/kefu"
                android:gravity="right|top"
                android:paddingRight="@dimen/dimen_18dp"
                android:text="客户留言"
                android:textColor="#333333"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="9dp"
                android:src="@mipmap/logo" />
        </LinearLayout>
    </LinearLayout>
    <!--客户回答-->
    <LinearLayout
        android:id="@+id/mLL_kefu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTxt_meKeFuTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_lunkuo_paint7"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="11dp"
                android:paddingRight="@dimen/dimen_11dp"
                android:paddingTop="8dp"
                android:text="12月12日 10：20"
                android:textColor="#333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="5dp"
                android:src="@mipmap/kefukefu" />

            <TextView
                android:id="@+id/mTxt_keFuAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="58dp"
                android:background="@drawable/me"
                android:gravity="top|left"
                android:paddingLeft="17dp"
                android:paddingTop="@dimen/dimen_14dp"
                android:text="客户留言"
                android:textColor="#333333"
                android:textSize="14sp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>