<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbackground"
    android:orientation="vertical"
    tools:context=".business.mine.activity.AddNewAddressActivity">


    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/mTxt_userName"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="联系人"
                android:textColor="@color/black_666666"
                android:textSize="@dimen/dimen_14sp" />

            <EditText
                android:textColor="@color/black_333333"
                android:id="@+id/mEd_myName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="姓名"
                android:textSize="@dimen/dimen_15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#dddddd" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/mTxt_userPhone"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="电话"
                android:textColor="@color/black_666666"
                android:textSize="@dimen/dimen_14sp" />

            <EditText
                android:textColor="@color/black_333333"
                android:id="@+id/mEd_myPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="手机号码"
                android:textSize="@dimen/dimen_15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#dddddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/mTxt_userAddress"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="市区"
                android:textColor="@color/black_666666"
                android:textSize="@dimen/dimen_14sp" />

            <TextView
                android:textColor="@color/black_333333"
                android:id="@+id/mEd_myAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@color/white"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="请选择收货地址"
                android:textSize="@dimen/dimen_15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#dddddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/mTxt_userDoorNumber"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="地址"
                android:textColor="@color/black_666666"
                android:textSize="@dimen/dimen_14sp" />

            <EditText
                android:textColor="@color/black_333333"
                android:id="@+id/mEd_myDoor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="例：XX路 10号楼101室"
                android:textSize="@dimen/dimen_15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#dddddd" />

        <LinearLayout
            android:id="@+id/mLL_checked"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="设置为默认地址"
                android:textColor="@color/black_666666"
                android:textSize="@dimen/dimen_14sp" />

            <CheckBox
                android:id="@+id/mCheckBox"
                android:checked="false"
                android:button="@null"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:background="@drawable/selector_gouwuche_xuanze"
                android:gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/mTxt_keep"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ll1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/shape_lunkuo_paint"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_18sp" />

    <TextView
        android:layout_margin="@dimen/dimen_10dp"
        android:id="@+id/mTxt_deleteAddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ll1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_lunkuo_line"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/basicColor"
        android:textSize="@dimen/dimen_18sp" />
</LinearLayout>