<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".business.mine.activity.LoginActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        >



        <com.dodo.marcket.wedget.ClearEditText
            android:id="@+id/mEd_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:drawablePadding="8dp"
            android:gravity="center_vertical|left"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="13"
            android:text=""
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingTop="10dp"
            android:textColor="#173143"
            android:textColorHint="#9d9d9d"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/mEd_phone"
            android:background="@color/lineColor" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@id/line1"
            android:id="@+id/mTxt_ss"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#20d994"
            android:textSize="@dimen/dimen_16sp" />
        <EditText
            android:id="@+id/mEd_psw"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/line1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawablePadding="8dp"
            android:layout_toLeftOf="@id/mTxt_ss"
            android:gravity="center_vertical|left"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:text=""
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingTop="10dp"
            android:textColor="#173143"
            android:textColorHint="#9d9d9d"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/mEd_psw"
            android:background="@color/lineColor" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@id/ll1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mImg_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/logo" />
    </LinearLayout>


    <TextView
        android:id="@+id/mTxt_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ll1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:background="@drawable/shape_lunkuo_paint"
        android:gravity="center"
        android:textStyle="bold"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_18sp" />
</RelativeLayout>
