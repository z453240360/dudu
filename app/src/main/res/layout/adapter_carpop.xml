<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:lines="1"
            android:textSize="15sp"
            android:textColor="@color/black_333333"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:id="@+id/mTxt_carPopName"
            tools:text="绿色农庄新鲜大鸭腿"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


        <TextView
            android:gravity="center_vertical"
            android:textColor="#f39700"
            android:text="¥ "
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:layout_marginRight="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:textColor="#f39700"
            tools:text="99.9"
            android:id="@+id/mTxt_carPopPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/mImg_jian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jian" />

            <TextView
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:textColor="@color/basicColor"
                android:id="@+id/mTxt_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="100" />

            <ImageView
                android:id="@+id/mImg_jia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jia" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>